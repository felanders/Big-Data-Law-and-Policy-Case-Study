}

@article{darienzo_addiction_2019,
	title = {Addiction to Social Media and Attachment Styles: A Systematic Literature Review},
	volume = {17},
	issn = {1557-1882},
	url = {https://doi.org/10.1007/s11469-019-00082-5},

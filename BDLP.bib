@article{corrigan_how_2018,
	title = {How much is social media worth? Estimating the value of Facebook by paying users to stop using it},
	volume = {13},
	issn = {1932-6203},
	url = {https://journals.plos.org/plosone/article?id=10.1371/journal.pone.0207101},
	doi = {10.1371/journal.pone.0207101},
	shorttitle = {How much is social media worth?},
	abstract = {Facebook, the online social network, has more than 2 billion global users. Because those users do not pay for the service, its benefits are hard to measure. We report the results of a series of three non-hypothetical auction experiments where winners are paid to deactivate their Facebook accounts for up to one year. Though the populations sampled and the auction design differ across the experiments, we consistently find the average Facebook user would require more than \$1000 to deactivate their account for one year. While the measurable impact Facebook and other free online services have on the economy may be small, our results show that the benefits these services provide for their users are large.},
	pages = {e0207101},
	number = {12},
	journaltitle = {{PLOS} {ONE}},

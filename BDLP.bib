	note = {Place: {ST} {ALBAN}-{ANLAGE} 66, {CH}-4052 {BASEL}, {SWITZERLAND}
Publisher: {MDPI}
Type: Review},
	keywords = {comorbidity, literature review, motivations, negative consequences, personality, social network addiction, social networking sites, specificity},
}

